<div id="header" class="navigation white navbar-static-top">
    <%- partial('header/announcement') %>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="navbar-header">
                    <div class="navbar-brand">
                        <a class="logo" href="/">Terraform</a>
                        <a class="by-hashicorp white" href="https://www.hashicorp.com/">
                            <span class="svg-wrap">by</span><%- partial('header/icon-by') %><%- partial('header/icon-logo') %>HashiCorp</a>
                    </div>
                    <button class="navbar-toggle white" type="button">
                        <span class="sr-only">切换导航</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="buttons hidden-xs">
                    <nav class="navigation-links" role="navigation">
                        <ul class="external-links nav navbar-nav navbar-right">
                            <% if (config.menu.download.enable) { %>
                            <li class="first download"><a href="<%- url_for(config.download_dir + '/') %>"><%- partial('header/icon-download') %>下载</a></li>
                            <% } %>

                            <% if (config.menu.github.enable) { %>
                            <li class="github"><a href="<%- config.menu.github.url %>"><%- partial('header/icon-github') %>GitHub</a></li>
                            <% } %>
                        </ul>
                        <ul class="main-links nav navbar-nav navbar-right">
                            <li class="first li-under"><a href="<%- url_for(config.intro_dir + '/') %>">简介</a></li>
                            <li class="li-under"><a href="<%- url_for(config.document_dir + '/') %>">文档</a></li>
                            <li class="li-under"><a href="<%- url_for(config.components_dir + '/') %>">组件</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
